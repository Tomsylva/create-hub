{{#with discussion}}
<div class="basic-form">
  <form action="/community/{{_id}}/edit-discussion" method="POST" enctype="multipart/form-data">


    <label for="title" class="basic-label">Topic</label>
    <input name="title" value="{{title}}" class="basic-input">
    <br>
    <label for="firstPost" class="basic-label">Post</label>
    <textarea name="firstPost" value="{{firstPost}}" class="basic-input"></textarea>
    <br>
    <label for="image" class="basic-label">Image</label>
    <input type="file" name="image" id="file" class="file-input">
    <br>
    <button type="submit" class="basic-button">Submit Changes</button>

  </form>
</div>
{{/with}}